{
  "name": "group_post-type_post",
  "title": "Post Type: Post",
  "fields": [
    {
      "label": "Related People",
      "name": "related_people",
      "acf_composer_extend": "LimeRockTheme/ACF/fields/relationship",
      "post_type": ["person"]
    },
    {
      "label": "Is External Link",
      "name": "is_external_link",
      "type": "true_false"
    },
    {
      "label": "Publication",
      "instructions": "The name of the publication where this work was published.",
      "name": "publication_name",
      "type": "text"
    },
    {
      "label": "External Link",
      "name": "external_link",
      "type": "link",
      "instructions": "For this link, set the title to the source. Example: New York Times",
      "conditional_logic": [
        [
          {
            "fieldPath": "is_external_link",
            "operator": "==",
            "value": 1
          }
        ]
      ]
    },
    { "label": "Intro Copy", "name": "intro_copy", "type": "wysiwyg" }
  ],
  "location": [
    [
      {
        "param": "post_type",
        "operator": "==",
        "value": "post"
      }
    ]
  ]
}
