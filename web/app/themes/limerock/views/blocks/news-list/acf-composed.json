{
  "name": "group_block_news-list",
  "title": "Block Details: News List",
  "fields": [
    {
      "label": "Title",
      "name": "title",
      "type": "text"
    },
    {
      "label": "Selection Type",
      "name": "selection_type",
      "type": "select",
      "choices": {
        "all": "All",
        "related": "Related",
        "manual": "Manual"
      }
    },
    {
      "label": "Selections",
      "name": "selections",
      "type": "relationship",
      "post_type": ["post"],
      "conditional_logic": [
        [
          {
            "fieldPath": "selection_type",
            "operator": "==",
            "value": "manual"
          }
        ]
      ]
    },
    {
      "label": "Select related Research Areas",
      "name": "related_research_areas",
      "type": "taxonomy",
      "taxonomy": "tax-research-area",
      "field_type": "multi_select",
      "add_term": false,
      "save_terms": false,
      "load_terms": false,
      "return_format": "id",
      "conditional_logic": [
        [
          {
            "fieldPath": "selection_type",
            "operator": "==",
            "value": "related"
          }
        ]
      ]
    },
    {
      "label": "Posts per page",
      "name": "posts_per_page",
      "type": "number",
      "min": 1,
      "step": 1,
      "default_value": 3
    }
  ],
  "location": [
    [
      {
        "param": "block",
        "operator": "==",
        "value": "limerock/news-list"
      }
    ]
  ]
}
