{% embed '@partial/block_wrapper.twig' with {
  extra_classes: 'block_featured-work',
} %}
  {% block content %}
    {% macro archive_link(link) %}
      {% if link is not empty %}
        <a href="{{link.url}}" class="btn btn-primary" target="{{link.target}}">{{ link.title }}</a>
      {% endif %}
    {% endmacro %}
    {{fields|console_log}}
    <div class="container">
      <div class="row">
        <div class="col-12">
          {% if fields.intro_copy %}
            <p class="featured-work_intro-copy">{{ fields.intro_copy }}</p>
          {% endif %}
          <div>
            {% if fields.headline %}
              <h5 class="block-title">{{ fields.headline }}</h5>
            {% endif %}
            {% if not fields.show_link_at_bottom %}
              {{_self.archive_link(fields.archive_link)}}
            {% endif %}
          </div>
        </div>
        <div class="col-12">
          {% include '@partial/tease_switcher.twig' with {
            post: get_post(fields.featured_work),
            tease_options: { variant: 'featured' }
          } only %}
        </div>
        {% if fields.additional_items is not empty %}
          <div class="col-12">
            {% include '@partial/post-repeater.twig' with {
              posts: get_posts(fields.additional_items),
              variant: 'archive'
            } only %}
          </div>
        {% endif %}

        <div class="col-12">
          {% if fields.show_link_at_bottom %}
            {{_self.archive_link(fields.archive_link)}}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>{% endblock %}{% endembed %}
