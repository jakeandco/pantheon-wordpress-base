{
  "name": "group_block_two-column-text-block",
  "title": "Block Details: 2-Column Text Block",
  "fields": [
    {
      "label": "Heading",
      "name": "heading",
      "type": "text"
    },
    {
      "label": "Select Block Variation",
      "name": "variation",
      "type": "select",
      "choices": {
        "two_cols": "Two columns (no sidebar)",
        "two_cols_sidebar": "Two columns with sidebar",
        "two_cols_heading": "Two columns with heading as first column (no sidebar)",
        "two_cols_heading_sidebar": "Two columns with heading as first column with sidebar"
      }
    },
    {
      "label": "Column 1",
      "name": "column_1",
      "type": "wysiwyg",
      "wrapper": {
        "width": 50
      },
      "conditional_logic": [
        [
          {
            "fieldPath": "variation",
            "operator": "==",
            "value": "two_cols"
          }
        ],
        [
          {
            "fieldPath": "variation",
            "operator": "==",
            "value": "two_cols_sidebar"
          }
        ]
      ]
    },
    {
      "label": "Column 1 Heading",
      "name": "column_1_heading",
      "type": "textarea",
      "wrapper": {
        "width": 50
      },
      "conditional_logic": [
        [
          {
            "fieldPath": "variation",
            "operator": "==",
            "value": "two_cols_heading"
          }
        ],
        [
          {
            "fieldPath": "variation",
            "operator": "==",
            "value": "two_cols_heading_sidebar"
          }
        ]
      ]
    },
    {
      "label": "Column 2",
      "name": "column_2",
      "type": "wysiwyg",
      "wrapper": {
        "width": 50
      }
    },
    {
      "label": "Sidebar Additional Ð¡ontent",
      "name": "sidebar_content",
      "type": "wysiwyg",
      "conditional_logic": [
        [
          {
            "fieldPath": "variation",
            "operator": "==",
            "value": "two_cols_sidebar"
          }
        ],
        [
          {
            "fieldPath": "variation",
            "operator": "==",
            "value": "two_cols_heading_sidebar"
          }
        ]
      ]
    }
  ],
  "location": [
    [
      {
        "param": "block",
        "operator": "==",
        "value": "limerock/two-column-text-block"
      }
    ]
  ]
}
