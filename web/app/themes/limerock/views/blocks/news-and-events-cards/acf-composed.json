{
  "name": "group_block_news-and-events-cards",
  "title": "Block Details: News and Event Cards",
  "fields": [
    {
      "label": "Title",
      "name": "title",
      "type": "text",
      "wrapper": {
        "width": 60
      }
    },
    {
      "label": "Variation",
      "name": "variation",
      "type": "select",
      "choices": {
        "with_image": "With Image",
        "without_image": "Without Image"
      },
      "default_value": "with_image",
      "wrapper": {
        "width": 40
      }
    },
    {
      "label": "Selection Type",
      "name": "selection_type",
      "type": "select",
      "choices": {
        "all": "All",
        "related": "Related",
        "manual": "Manual"
      },
      "wrapper": {
        "width": 60
      }
    },
    {
      "label": "Manually set related taxonomy",
      "name": "manually_set_taxonomy",
      "type": "true_false",
      "wrapper": {
        "width": 40
      },
      "conditional_logic": [
        [
          {
            "fieldPath": "selection_type",
            "operator": "==",
            "value": "related"
          }
        ]
      ]
    },
    {
      "label": "Selections",
      "name": "selections",
      "type": "relationship",
      "post_type": ["post", "event"],
      "conditional_logic": [
        [
          {
            "fieldPath": "selection_type",
            "operator": "==",
            "value": "manual"
          }
        ]
      ]
    },
    {
      "label": "Related Taxonomies",
      "name": "related_taxonomies",
      "acf_composer_extend": "LimeRockTheme/ACF/fields/terms",
      "taxonomy": ["tax-research-area", "event-category"],
      "conditional_logic": [
        [
          {
            "fieldPath": "selection_type",
            "operator": "==",
            "value": "related"
          },
          {
            "fieldPath": "manually_set_taxonomy",
            "operator": "==",
            "value": 1
          }
        ]
      ]
    }
  ],
  "location": [
    [
      {
        "param": "block",
        "operator": "==",
        "value": "limerock/news-and-events-cards"
      }
    ]
  ]
}
