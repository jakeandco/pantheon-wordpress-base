{% embed '@partial/block_wrapper.twig' with { extra_classes: 'block_video-carousel' } %}
  {% block content %}
    <div class="container">
      <h2 class="block-title">{{fields.title}}</h2>

      <div class="swiper video-carousel">
        <div class="swiper-wrapper">
          {% for image in fields.gallery %}
            <div class="swiper-slide">
              {% include '@partial/media-item.twig' with { image } only %}
            </div>
          {% endfor %}
        </div>

        <div class="swiper-button-prev video-swiper-button-prev">
          <svg width="27" height="26" viewBox="0 0 27 26" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M26.2721 11.8677L26.2721 14.0585L4.78145 14.0585L14.64 23.9171L13.0752 25.4819L0.556345 12.9631L13.0752 0.444268L14.64 2.00912L4.78145 11.8677L26.2721 11.8677Z" fill="currentColor"/>
          </svg>
        </div>
        <div class="swiper-button-next video-swiper-button-next">
          <svg width="27" height="26" viewBox="0 0 27 26" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0.651743 14.0561L0.651742 11.8653L22.1424 11.8653L12.2838 2.00678L13.8487 0.441925L26.3675 12.9607L13.8487 25.4796L12.2838 23.9147L22.1424 14.0561L0.651743 14.0561Z" fill="currentColor"/>
          </svg>
        </div>
      </div>
    </div>
  {% endblock %}
{% endembed %}
