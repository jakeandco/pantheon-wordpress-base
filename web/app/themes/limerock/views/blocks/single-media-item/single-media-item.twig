{% set align = block.align|default('full') %}
{% embed '@partial/block_wrapper.twig' with {
  extra_classes: html_classes(
    'block_single-media-item',
    ('block_single-media-item--' ~ align),
    {
      'full-block-width': align == 'wide'
    },
  )
} %}
  {% block content %}
    <div class="container">
      {% if fields.headline %}
        <div class="row heading-holder">
          <div class="col-12 col-md-9">
            <h2 class="h6 mb-0">{{fields.headline}}</h2>
          </div>
        </div>
      {% endif %}
      <div class="row media-holder">
        <div class="{{ html_classes('col-12', { 'col-md-8': align not in ['wide', 'full'], 'offset-md-4': align == 'right', 'offset-md-2': align == 'center', }) }}">

          {% include '@partial/media-item.twig' with { image: fields.media_item, overlay_title: fields.media_item_title } only %}
        </div>
      </div>
    </div>
  {% endblock %}
{% endembed %}
